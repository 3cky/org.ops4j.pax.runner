<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <relativePath>../</relativePath>
    <groupId>org.ops4j.pax.runner.pax-runner-build</groupId>
    <artifactId>pax-runner-build-root</artifactId>
    <version>0.5.6-SNAPSHOT</version>
  </parent>

  <groupId>org.ops4j.pax.runner</groupId>
  <artifactId>pax-runner</artifactId>
  <packaging>bundle</packaging>

  <name>OPS4J Pax Runner - Core</name>
  <description>
    OPS4J Pax Runner - Core engine. See details at http://wiki.ops4j.org/confluence/x/A4A6
  </description>

  <url>http://wiki.ops4j.org/confluence/x/A4A6</url>

  <properties>
    <bundle.package>org.ops4j.pax.runner</bundle.package>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>${maven.bundle.plugin.groupId}</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Private-Package>${bundle.package},${bundle.package}.osgi</Private-Package>
            <Import-Package>!*</Import-Package>
            <Export-Package>!*</Export-Package>
            <_include>-target/classes/META-INF/details.bnd</_include>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.framework</artifactId>
      <version>1.0.0</version>
      <exclusions>
        <!--
          remove bad dependency from the released felix 1.0.0 pom
          (it shouldn't use ${pom.groupId} in dependency section)
        -->
        <exclusion>
          <groupId>${pom.groupId}</groupId>
          <artifactId>org.osgi.core</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_core</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_compendium</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner.pax-runner-internal</groupId>
      <artifactId>pax-runner-commons</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-handler</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-handler-mvn</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-handler-wrap</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-handler-classpath</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-provision</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-scanner-bundle</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-scanner-dir</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-scanner-file</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-scanner-pom</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-platform</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-platform-concierge</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-platform-equinox</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-platform-felix</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-platform-knopflerfish</artifactId>
      <version>0.5.6-SNAPSHOT</version>
    </dependency>
  </dependencies>

</project>