    <bundle>
      <name>org.knopflerfish.bundle.logcommands</name>
      <url>mvn:org.knopflerfish.bundle.logcommands/logcommands/1.0.1</url>
    </bundle>
  </profile>

  <profile name="gui" extends="config">
    <bundle>
      <name>org.knopflerfish.bundle.desktop</name>
      <url>mvn:org.knopflerfish.bundle.desktop/desktop_all/1.2.0</url>
    </bundle>
    <bundle>
      <name>org.knopflerfish.bundle.util</name>
      <url>mvn:org.knopflerfish.bundle.util/util/1.0.0</url>
    </bundle>
    <bundle>
      <name>org.knopflerfish.bundle.kxml</name>
      <url>mvn:org.knopflerfish.bundle.kxml/kxml/1.0</url>
