<platform>

  <name>Knopflerfish</name>

  <system>mvn:org.knopflerfish.osgi/framework/2.0.0</system>

  <profile name="minimal" default="true">
  </profile>

  <profile name="tui" extends="minimal,config,log">
    <bundle>
      <name>org.knopflerfish.bundle.useradmin</name>
      <url>mvn:org.knopflerfish.bundle.useradmin/useradmin_api/1.1.0</url>
    </bundle>
    <bundle>
      <name>org.knopflerfish.bundle.consoletty</name>
      <url>mvn:org.knopflerfish.bundle.consoletty/consoletty/1.0.1</url>
