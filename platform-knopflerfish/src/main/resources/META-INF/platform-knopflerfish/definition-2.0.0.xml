    <bundle>
      <name>org.knopflerfish.bundle.cm_desktop</name>
      <url>mvn:org.knopflerfish.bundle.cm_desktop/cm_desktop/1.0.0</url>
    </bundle>
  </profile>

  <profile name="obr" extends="gui">
    <bundle>
      <name>org.knopflerfish.bundle.bundlerepository</name>
      <url>mvn:org.knopflerfish.bundle.bundlerepository/bundlerepository_all/1.1.2</url>
    </bundle>
  </profile>

  <profile name="config" extends="minimal">
    <bundle>
      <name>org.knopflerfish.bundle.cm</name>
      <url>
        mvn:org.knopflerfish.bundle.cm/cm_api/1.0.1
      </url>
    </bundle>
  </profile>

  <profile name="log" extends="minimal">
    <bundle>
      <name>org.ops4j.pax.logging.api</name>
      <url>mvn:org.ops4j.pax.logging/api/0.9.4</url>
