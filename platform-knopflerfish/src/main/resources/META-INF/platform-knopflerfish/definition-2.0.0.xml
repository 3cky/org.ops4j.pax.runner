    <bundle>
      <name>org.ops4j.pax.logging.slf4j</name>
      <url>mvn:org.ops4j.pax.logging/slf4j/0.9.4</url>
    </bundle>
  </profile>

  <profile name="web" extends="log">
    <bundle>
      <name>org.ops4j.pax.web</name>
      <url>mvn:org.ops4j.pax.web.bundles/service/0.2.0</url>
