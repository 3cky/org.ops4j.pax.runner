<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <relativePath>../</relativePath>
    <groupId>org.ops4j.pax</groupId>
    <artifactId>runner</artifactId>
    <version>0.13.1-SNAPSHOT</version>
  </parent>

  <groupId>org.ops4j.pax.runner</groupId>
  <artifactId>pax-runner-platform-console</artifactId>
  <version>0.13.1-SNAPSHOT</version>
  <packaging>bundle</packaging>

  <name>OPS4J Pax Runner - Platform Console</name>
  <description>
    OPS4J Pax Runner - Utility console that could be used to start platforms from a command line while in a running osgi
    platform.
    See details at http://wiki.ops4j.org/confluence/x/c4A6.
  </description>

  <properties>
    <bundle.symbolicName>org.ops4j.pax.runner.platform.console</bundle.symbolicName>
    <bundle.namespace>org.ops4j.pax.runner.platform.console</bundle.namespace>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
      </plugin>      
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.ops4j.pax.runner</groupId>
      <artifactId>pax-runner-platform</artifactId>
      <version>0.13.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>


</project>